$bg = "http://pic45.nipic.com/20140806/19352596_224816699391_2.jpg"
*
  padding 0
  margin 0
html, body
 width 100%
 height 100%
.plane-page
  width 100%
  height 100%
  background url($bg) no-repeat
  position relative
  .plane-wrapper
    position absolute
    left 20%
    top 10% //40%
    animation undulate .8s linear infinite alternate
    perspective 2500px 
    transition 1s
    .plane
      width 100%
    .rotate-container
      position absolute
      top 51.7003%
      left 13.1%
      width 27.424%
      height 14.447%
      transform-origin center center
      animation rotating .2s linear infinite reverse
      .propeller
        width 100%
        transform rotateY(-28deg)

@keyframes rotating 
  0%
    transform rotate(0) 
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)

@keyframes undulate
    0%, 50%, 100%
      transform translate3d(0,0,0)
    20%
      transform translate3d(50px,0,0)
    75%
      transform translate3d(80px,10px,0)

